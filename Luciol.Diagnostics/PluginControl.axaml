<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Luciol.Diagnostics.PluginControl"
             xmlns:Hparg="clr-namespace:Hparg;assembly=Hparg"
             xmlns:views="using:Luciol.Plugin">
  <DockPanel>
	  <Grid>
		  <Grid.RowDefinitions>
			  <RowDefinition Height="*"/>
			  <RowDefinition Height="*"/>
		  </Grid.RowDefinitions>

		  <Hparg:Graph Grid.Row="0" Name="TrianglePerformancePlot"/>

		  <Grid Grid.Row="1">
			  <Grid.ColumnDefinitions>
				  <ColumnDefinition Width="*"/>
				  <ColumnDefinition Width="125"/>
			  </Grid.ColumnDefinitions>

			  <TextBox Grid.Column="0"></TextBox>
			  <StackPanel Grid.Column="1"
						  VerticalAlignment="Center"
						  HorizontalAlignment="Center">
				  <Button Command="{Binding RefreshAll}">Refresh all files</Button>
			  </StackPanel>
		  </Grid>
	  </Grid>
  </DockPanel>
</UserControl>
